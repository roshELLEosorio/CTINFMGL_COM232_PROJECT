<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="438.0" prefWidth="528.0" stylesheets="@../../../css/global.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kevs.dev.airbnb.AddPropertyController">
   <children>
      <Label layoutX="27.0" layoutY="28.0" styleClass="label-bold" text="Create a New Property">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label layoutX="27.0" layoutY="60.0" text="Provide details about your property to list it on the platform." />
      <VBox layoutX="27.0" layoutY="108.0" spacing="10.0">
         <children>
            <Label text="Property Name" />
            <TextField fx:id="propertyNameField" prefHeight="25.0" prefWidth="210.0" styleClass="default-text-field" />
         </children>
      </VBox>
      <VBox layoutX="27.0" layoutY="175.0" prefHeight="127.0" prefWidth="466.0" spacing="10.0">
         <children>
            <Label text="Description" />
            <TextArea fx:id="propertyDescriptionField" prefHeight="175.0" prefWidth="466.0" styleClass="default-text-field" />
         </children>
      </VBox>
      <VBox layoutX="283.0" layoutY="108.0" spacing="10.0">
         <children>
            <Label text="Property Address" />
            <TextField fx:id="propertyAddressField" prefHeight="25.0" prefWidth="210.0" styleClass="default-text-field" />
         </children>
      </VBox>
      <Button layoutX="27.0" layoutY="324.0" mnemonicParsing="false" onMouseClicked="#createProperty" prefHeight="30.0" prefWidth="466.0" styleClass="default-button" text="Create Property" />
      <Button layoutX="27.0" layoutY="369.0" mnemonicParsing="false" onMouseClicked="#cancel" prefHeight="30.0" prefWidth="466.0" style="-fx-background-color: #b0161f;" styleClass="default-button" text="Cancel" />
   </children>
</AnchorPane>
