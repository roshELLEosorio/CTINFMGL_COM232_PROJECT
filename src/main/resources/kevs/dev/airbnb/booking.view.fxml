<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="312.0" prefWidth="600.0" styleClass="body" stylesheets="@../../../css/global.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kevs.dev.airbnb.BookingController">
   <children>
      <Label fx:id="propertyName" layoutX="25.0" layoutY="35.0" prefHeight="24.0" styleClass="label-bold" text="Cozy Beach House">
         <font>
            <Font size="19.0" />
         </font>
      </Label>
      <Label fx:id="propertyAddress" layoutX="25.0" layoutY="66.0" prefHeight="24.0" text="Location: 123 Ocean View, Miami, FL" wrapText="true" />
      <Label fx:id="propertyDescription" layoutX="25.0" layoutY="90.0" maxWidth="540.0" prefHeight="24.0" text="Description: A beautiful beach house with ocean view." wrapText="true" />
      <VBox layoutX="27.0" layoutY="136.0" prefWidth="260.0" spacing="5.0">
         <children>
            <Label maxWidth="540.0" prefHeight="24.0" text="Check In Date" wrapText="true" />
            <DatePicker fx:id="checkInDate" prefHeight="25.0" prefWidth="411.0" styleClass="default-text-field" />
         </children>
      </VBox>
      <VBox layoutX="302.0" layoutY="136.0" prefWidth="260.0" spacing="5.0">
         <children>
            <Label maxWidth="540.0" prefHeight="24.0" text="Check out Date" wrapText="true" />
            <DatePicker fx:id="checkOutDate" prefHeight="25.0" prefWidth="411.0" styleClass="default-text-field" />
         </children>
      </VBox>
      <Button layoutX="25.0" layoutY="208.0" mnemonicParsing="false" onMouseClicked="#submitBooking" prefHeight="31.0" prefWidth="538.0" styleClass="default-button" text="Book Now" />
      <Button layoutX="25.0" layoutY="251.0" mnemonicParsing="false" onMouseClicked="#cancelBooking" prefHeight="31.0" prefWidth="538.0" styleClass="cancel-button" text="Cancel" />
      <Label fx:id="propertyId" alignment="CENTER" focusTraversable="false" layoutX="550.0" layoutY="23.0" prefHeight="24.0" styleClass="label-bold" text="12" textAlignment="CENTER" visible="false" wrapText="true">
         <font>
            <Font size="9.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
